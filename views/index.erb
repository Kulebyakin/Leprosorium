<h2>Latest posts:</h2>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Content</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>

    <% @results.each do |post| %>
    <tr>
      <th scope="row"><%= post['id'] %></th>
      <td><%= post['content'] %>
        <br>
        <a href="/post/<%= post['id'] %>">Comments</a>
      </td>
      <td><%= post['created_date'] %></td>
    </tr>
    <% end %>
  </tbody>
</table>